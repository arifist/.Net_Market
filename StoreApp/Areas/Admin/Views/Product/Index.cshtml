@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div>
        <a class="btn btn-outline-success" asp-action="Create">
            
            Create</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product prd in Model)
            {
            <tr>
                <td>@prd.ProductId</td>
                <td>@prd.ProductName</td>
                <td>@prd.Price</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">Delete</a>
                    </div>

                </td>

            </tr>
                
            }
        </tbody>
    </table>
</div>
